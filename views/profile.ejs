<%- include("include/head.ejs") %>

<a href="http://localhost:3000/"><i class="fa-solid fa-angle-left" title="Back" style="padding: 5px 9px;"></i></a>


    <div class="profile-div">
        <div class="profile-pic-div">
            <img src="<%= user.picUrl %>" alt="profile-pic" class="profile-pic" onerror="
                this.onerror=null;
                this.src=`/assets/default.png`;
                alert(`your image link is broken, please update it`);
            ">
        </div>
        <div class="profile-detail">
            <div style="display:flex; justify-content: space-between;">
                <span>
                    <%= user.username %> 
                    <i class="fa-solid fa-circle-check"></i>
                </span>
                <span>
                    <form style="display: inline;"  method="post" action="http://localhost:3000/<%=user.username%>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this profile?');">
                        <button style="border: none; background-color: transparent; box-shadow: none;"
                        >
                            <i class="fa-solid fa-trash-can edit-icon" style="font-size: 17px;"></i>
                        </button>
                    </form>

                    <a href="http://localhost:3000/<%=user.username%>/edit"><i class="fa-solid fa-pen-to-square edit-icon"></i></a>&nbsp&nbsp
                    <a href="http://localhost:3000/<%=user.username%>/new" class="add-icon" title="add a new post">+</a>
                </span>
            </div>
            <br>
            <p style="margin-top: 0;"> 
                <span class="number"><%= user.followers %></span> followers   &nbsp&nbsp&nbsp&nbsp&nbsp
                <span class="number"><%= user.following %></span> following 
            </p>
            <p class="description"> <%= user.description %></p>
        </div>
    </div>
    <hr>
    <div class="posts-div">
        <% for(post of posts){ %>
            <div class="posts">
                <a href="http://localhost:3000/<%=user.username%>/<%=post.id%>"><img src="<%= post.imgUrl %>" class="posts-img"></a>
            </div>
        <%}%>
    </div>
</body>
</html>


