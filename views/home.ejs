<%- include("include/head.ejs") %>
    <h1 style="display: flex; justify-content: space-between">
      All Profiles
      <span>
        <a
          href="http://localhost:3000/new"
          class="add-icon"
          title="add a new profile"
          >+
        </a>
      </span>
    </h1>
    <hr />
    <% for(profile of userProfiles){ %>
    <img
      src="<%= profile.picUrl %>"
      alt="username"
      width="100"
      height="100"
      style="border-radius: 50%"
    />
    <br />
    <a
      href="http://localhost:3000/<%=profile.username%>"
      style="font-size: 20px; font-family: Arial, Helvetica, sans-serif"
      >@<%=profile.username%>
    </a>
    <p>
      <span class="number"><%= profile.followers %></span> followers
      <span class="number"><%= profile.following %></span> following
    </p>
    <hr />
    <%}%>
  </body>
</html>
